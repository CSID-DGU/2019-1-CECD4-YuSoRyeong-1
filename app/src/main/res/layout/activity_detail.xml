<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/searchRootButton"
            android:layout_width="160dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:text="길찾기"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="230sp"
            android:layout_height="230sp"
            android:layout_marginLeft="120sp"
            android:layout_marginTop="120sp"
            app:srcCompat="@drawable/n_seoultower" />

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="120sp"
            android:layout_toRightOf="@id/detailImage"
            android:padding="10dp"
            android:text=""
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailLocation"
            android:layout_width="450sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailName"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/detailImage"
            android:padding="10dp"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detailTel"
            android:layout_width="450sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailLocation"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/detailImage"
            android:padding="10dp"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detailTime"
            android:layout_width="450sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailTel"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/detailImage"
            android:padding="10dp"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detailContent"
            android:layout_width="700sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailImage"
            android:layout_marginLeft="120sp"
            android:layout_marginTop="50sp"
            android:isScrollContainer="true"
            android:padding="20dp"
            android:text=""
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>